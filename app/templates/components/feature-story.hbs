
{{#if feature.feature}}
<div class="container">
  <div class="row feature-row">
    <div class="col-sm-12">
      <img class="img-responsive" src={{feature.image}} alt="Feature Story Image">
      <div class="feature-details">
        <h3>{{feature.headline}}</h3>
        <h5>By <span>{{feature.author}}</span></h5>
      </div>
    </div>
  </div>
</div>
{{/if}}
